{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "sbrw-linux-utility",
    "version": "0.1.0",
    "identifier": "com.sbrw.linux-utility",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "SBRW Utility for Linux",
                "width": 900,
                "height": 600,
                "resizable": false,
                "maximizable": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": ["appimage"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": ["resources/*"]
    }
}
